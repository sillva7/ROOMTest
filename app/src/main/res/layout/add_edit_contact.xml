<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/addEditFName"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/addEditFName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fNameTV"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/lNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name:"
            app:layout_constraintEnd_toStartOf="@id/addEditFName"
            app:layout_constraintTop_toTopOf="@+id/addEditLName"
            app:layout_constraintBottom_toBottomOf="@+id/addEditLName"
            />
        <EditText
            android:id="@+id/addEditLName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            app:layout_constraintTop_toBottomOf="@+id/addEditFName"
            app:layout_constraintStart_toStartOf="@+id/addEditFName"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            app:layout_constraintEnd_toEndOf="@id/lNameTV"
            app:layout_constraintTop_toTopOf="@+id/addEditEmail"
            app:layout_constraintBottom_toBottomOf="@+id/addEditEmail"
            android:layout_marginLeft="5dp"
            />
        <EditText
            android:id="@+id/addEditEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:layout_constraintTop_toBottomOf="@+id/addEditLName"
            app:layout_constraintStart_toStartOf="@+id/addEditLName"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/numberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            app:layout_constraintEnd_toStartOf="@id/addEditEmail"
            app:layout_constraintBottom_toBottomOf="@id/addEditNumber"
            app:layout_constraintTop_toTopOf="@id/addEditNumber"

            />
        <EditText
            android:id="@+id/addEditNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            app:layout_constraintStart_toStartOf="@id/addEditEmail"
            app:layout_constraintTop_toBottomOf="@id/addEditEmail"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/addContactToBD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/addEditNumber"
            app:layout_constraintTop_toBottomOf="@id/addEditNumber"
            android:layout_marginTop="15dp"
            />
        <Button
            android:id="@+id/editContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/addEditNumber"
            app:layout_constraintTop_toBottomOf="@id/addEditNumber"
            android:layout_marginTop="15dp"

            />
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addEditNumber"
            android:text="Cancel"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

